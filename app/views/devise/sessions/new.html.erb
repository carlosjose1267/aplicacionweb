

<h2>Inicia sesion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " Escribe el nombre de tu correo" %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: " Escribe tu contraseÃ±a"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<br />
  <div class="actions">
    <%= f.submit "Iniciar sesion", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
